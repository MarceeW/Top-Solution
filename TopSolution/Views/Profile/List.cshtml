@model IEnumerable<SiteUser>

<h2 class="mb-5">Profiles</h2>
<div class="d-flex flex-row flex-wrap justify-content-around gap-1">
    @{
        int imageSize = 48;
        foreach (var user in Model)
        {
            <div class="border border-1 rounded-2 d-flex flex-row p-1 justify-content-around align-content-center mb-2">
                <div>
                    @if (user.ProfilePicturePath == null)
                    {
                        <svg xmlns="http://www.w3.org/2000/svg" width="@imageSize" height="@imageSize" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16" style="padding: 5px;">
                            <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3Zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z" />
                        </svg>
                    }
                    else
                    {
                        <img width="@imageSize" height="@imageSize" src="/profilepictures/@user.ProfilePicturePath" style="border-radius: 4px;" />
                    }
                </div>
                <div class="ps-2 pe-2 d-flex flex-column">
                    <div>
                        <a class="text-decoration-none" asp-controller="Profile" asp-action="Index" asp-route-id="@user.Id">@user.DisplayName</a>
                    </div>
                    <div class="d-flex flex-row flex-wrap gap-2" style="opacity: 50%;font-size: 12px;">
                        <div>
                            <span>Points: </span>
                            <span class="fw-bold">@user.CommunityPoints</span>
                        </div>
                        <div>
                            <span>Comments: </span>
                            <span class="fw-bold">@user.Comments.Count</span>
                        </div>
                        <div>
                            <span>Followers: </span>
                            <span class="fw-bold">@user.Followers</span>
                        </div>
                    </div>
                </div>
            </div> 
        }
    }
    
</div>