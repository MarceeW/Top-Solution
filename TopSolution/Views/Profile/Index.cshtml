@model SiteUser

<div class="d-flex justify-content-around">
    <form asp-action="UploadProfilePicture" enctype="multipart/form-data"> 
        <div class="profilepicturecontainer border border-2 rounded-2 mb-2">
            @if (Model.ProfilePicture == null)
            {
                <svg xmlns="http://www.w3.org/2000/svg" width="128" height="128" fill="currentColor" class="bi bi-person-fill" viewBox="0 0 16 16">
                    <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3Zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z" />
                </svg>
            }
            else
            {
                <img width="128" height="128" src="@Model.ProfilePictureBase64String" />
            }
        </div>
        <label class="btn btn-primary">
            Change Picture
            <input type="file" accept=".png,.jpg" id="profilePictureUpload" name="profilePicture" />
        </label>
        <button class="btn btn-secondary" id="profUploadFormSubmit" type="submit" style="display: none;">Save</button>
    </form>
    <div>
        <h1>@Model.DisplayName</h1>
    </div>
</div>
